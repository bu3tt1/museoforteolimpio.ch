{% set imagesWidth = 2000 %}
{% set imagesHeight = 2000 %}
<header>
    <div id="cover" class="carousel slide" data-ride="carousel" data-pause="false">
        <div class="cover-caption">
            <div class="content">
                <div class="text">
                    {{ header.title }}
                </div>
                {% if header.buttons|length > 0 %}
                    {% for button in header.buttons %}
                    	 <a href="{{ button.url }}" class="btn btn-primary" {% if button.target == true %}target=_blank{% endif %} role="button">
                    	{% if button.style == 'button' %}
                            {{ button.text }}
                        {% elseif button.style == 'arrow' %}
                        	<i class="fa fa-arrow-circle-down fa-lg"></i>
                        {% endif %}
                        </a>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <ol class="carousel-indicators">
            {% if header.images|length > 0 %}
                {% for image in header.images %}
                    <li data-target="#cover" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
                {% endfor %}
            {% endif %}
        </ol>
        <div class="carousel-inner" role="listbox">
            {% if header.images|length > 0 %}
                {% for image in header.images %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}" style="background-image: url('{{ page.media[image.full].cropResize(imagesWidth, imagesHeight).url }}')">
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <a class="carousel-control-prev" href="#cover" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#cover" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>