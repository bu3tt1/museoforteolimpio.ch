            <link href="https://fonts.googleapis.com/css?family=Catamaran:100,400&display=swap" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {% do assets.add('jquery', 101) %}
            {% do assets.add('theme://js/modernizr.custom.71422.js', 100) %}

            {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
                {% do assets.add('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') %}
                {% do assets.add('theme://js/html5shiv-printshiv.min.js') %}
            {% endif %}
            
        {% endblock %}

        {% block assets deferred %}
            {{ assets.css()|raw }}
            {{ assets.js()|raw }}
        {% endblock %}
        <script>
            $(function(){
                // fix height carousel in mobile browsers
                $('.carousel-item').css('height', $(window).height() );
                $(window).resize(function() {
                    $('.carousel-item').css('height', $(window).height());
                });
            });
            /**
            * scroll to section
            */
            function scrollToSection(){
                $('html, body').animate({
                    scrollTop: $("section.page-container").offset().top - $('.navbar').outerHeight()
                }, 500);
            }
        </script>
    {% endblock head%}
